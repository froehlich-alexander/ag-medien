body{
	margin:0;
	background-color:rgb(50,50,50);
	display:flex;
	justify-content:center;
	align-items:center;
	overflow:hidden;
	font-family:sans-serif;
}
*{
	box-sizing:border-box;
}
.page{
	max-height:100vh;
	position:relative;
	overflow:hidden;
	display:none;
}
.page.show{
	display:block;
}
.page .pg_wrapper{
	width:max-content;
	height:max-content;
}
.page .clickable{
	position:absolute;
	background-color:rgba(0,0,0,0.5);
	color:white;
	border-radius:0.5rem;
	border-top-left-radius:3rem;
	border-bottom-left-radius:3rem;
	display:flex;
	align-items: center;
	flex-flow:row-reverse;
	transform:translateX(-1.5rem);
	
}
.page .clickable .title{
	padding:0.5rem 1rem;
	font-weight:bold;
}
.page .clickable .icon{
	border:none;
	outline:none;
	border-radius:100%;
	width:3rem;
	height:3rem;
	background-color:rgba(0,0,0,0.5);
	position:relative;
	cursor:pointer;
	flex-shrink:0;
}
.page .clickable.right{
	flex-flow:row;
	transform:translateX(calc((100% - 1.5rem) * -1));
	border-radius:0.5rem;
	border-top-right-radius:3rem;
	border-bottom-right-radius:3rem;
}
.page .clickable .icon.arrow_r::after{
	content:'';
	position:absolute;
	top:0.5rem;
	left:0.5rem;
	width:2rem;
	height:2rem;
	background-image:url('../svg/arrow_right.svg');
	background-size:contain;
	background-repeat:no-repeat;
	background-position:center;
	display:inline-block;
}
.bg.fill-width{
	width:100vw;
}
.bg.fill-height{
	height:100vh;
}
.page.pg_panorama{
	overflow-x:auto;
}
.page.pg_panorama .bg{
	height:100vh;
	width:inherit;
}