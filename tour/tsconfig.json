{
  "compileOnSave": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": "./",
    "target": "ES2021",
    "module": "ES2020",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "DOM",
      "ESNext.AsyncIterable"
    ],
    "types": [
      "react",
      "bootstrap",
      "react-bootstrap",
      "jquery",
      "jest",
      "wicg-file-system-access"
    ],
    "strict": true,
    "useDefineForClassFields": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "incremental": true,
    "noEmitHelpers": true,
    "esModuleInterop": true
  }
}
