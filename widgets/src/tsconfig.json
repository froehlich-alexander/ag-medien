{
  "compileOnSave": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": "./",
    "module": "ES2020",
    "target": "ES2021",
    "moduleResolution": "node",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "noImplicitAny": true,
    "removeComments": false,
    "sourceMap": true,
    "outDir": "../build/js",
    "declarationDir": "../declarations",
    "declaration": true,
    "declarationMap": false,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitOverride": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "useDefineForClassFields": true
  },
  "include": [
    "./ts/**/*"
  ]
}